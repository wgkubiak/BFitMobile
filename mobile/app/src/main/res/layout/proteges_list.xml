<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#00FFFFFF"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="183dp"
            android:background="@android:color/white"
            android:padding="0dp">


            <TextView
                android:id="@+id/textViewName"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginStart="0dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="0dp"
                android:layout_marginRight="0dp"
                android:background="@color/colorAccent"
                android:gravity="center"
                android:text="Wojciech Kubiak"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="@android:color/white"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/textViewPressure"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_below="@+id/textViewWeight"
                android:layout_marginStart="-182dp"
                android:layout_marginLeft="-182dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="14dp"
                android:layout_marginRight="14dp"
                android:layout_toEndOf="@+id/divider7"
                android:layout_toRightOf="@+id/divider7"
                android:gravity="center"
                android:text="145/75"
                android:textColor="@color/secondaryText"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewGlucose"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_below="@+id/textViewPressure"
                android:layout_marginStart="-182dp"
                android:layout_marginLeft="-182dp"
                android:layout_marginTop="8dp"
                android:layout_toEndOf="@+id/divider7"
                android:layout_toRightOf="@+id/divider7"
                android:gravity="center"
                android:text="79"
                android:textColor="@color/secondaryText"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_below="@+id/textViewName"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="4dp"
                android:layout_marginRight="4dp"
                android:layout_toStartOf="@+id/divider7"
                android:layout_toLeftOf="@+id/divider7"
                android:gravity="center"
                android:text="Waga [kg]:"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textViewWeight"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_below="@+id/textViewName"
                android:layout_marginStart="-182dp"
                android:layout_marginLeft="-182dp"
                android:layout_marginTop="8dp"
                android:layout_toEndOf="@+id/divider7"
                android:layout_toRightOf="@+id/divider7"
                android:gravity="center"
                android:text="115.7"
                android:textColor="@color/secondaryText"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_below="@+id/textView5"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="4dp"
                android:layout_marginRight="4dp"
                android:layout_toStartOf="@+id/divider7"
                android:layout_toLeftOf="@+id/divider7"
                android:gravity="center"
                android:text="CiÅ›nienie:"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_below="@+id/textView6"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="4dp"
                android:layout_marginRight="4dp"
                android:layout_toStartOf="@+id/divider7"
                android:layout_toLeftOf="@+id/divider7"
                android:gravity="center"
                android:text="Glukoza:"
                android:textSize="18sp" />

            <Button
                android:id="@+id/delBtn"
                android:layout_width="28dp"
                android:layout_height="138dp"
                android:layout_below="@+id/textViewName"
                android:layout_alignEnd="@+id/textViewName"
                android:layout_alignRight="@+id/textViewName"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="0dp"
                android:layout_marginRight="0dp"
                android:background="@color/failRed"
                android:text="X"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                tools:visibility="visible" />

            <View
                android:id="@+id/divider7"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="185dp"
                android:layout_marginRight="185dp"
                android:background="#00FFFFFF" />

        </RelativeLayout>

    </FrameLayout>

</LinearLayout>