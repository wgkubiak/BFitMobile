<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#00FFFFFF"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="183dp"
            android:background="@android:color/white"
            android:padding="0dp">


            <TextView
                android:id="@+id/textViewName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:gravity="center"
                android:text="Wojciech Kubiak"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="@color/secondaryText"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/textViewPressure"
                android:layout_width="75dp"
                android:layout_height="32dp"
                android:layout_below="@+id/textViewWeight"
                android:layout_marginStart="14dp"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="14dp"
                android:layout_marginRight="14dp"
                android:layout_toEndOf="@+id/textView5"
                android:layout_toRightOf="@+id/textView5"
                android:background="@drawable/rounded_btn_gray"
                android:gravity="center"
                android:text="145/75"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewGlucose"
                android:layout_width="75dp"
                android:layout_height="32dp"
                android:layout_below="@+id/textViewPressure"
                android:layout_marginStart="14dp"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="8dp"
                android:layout_toEndOf="@+id/textView5"
                android:layout_toRightOf="@+id/textView5"
                android:background="@drawable/rounded_btn"
                android:gravity="center"
                android:text="79"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/delBtn"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_below="@+id/textViewWeight"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="42dp"
                android:layout_marginRight="42dp"
                android:layout_toStartOf="@+id/textView6"
                android:layout_toLeftOf="@+id/textView6"
                android:background="@drawable/rounded_container"
                android:text="X"
                android:textColor="@android:color/white"
                android:textSize="24sp"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_below="@+id/textViewName"
                android:layout_alignStart="@+id/textViewName"
                android:layout_alignLeft="@+id/textViewName"
                android:layout_marginStart="100dp"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="8dp"
                android:text="Waga [kg]"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textViewWeight"
                android:layout_width="75dp"
                android:layout_height="32dp"
                android:layout_below="@+id/textViewName"
                android:layout_marginStart="14dp"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="8dp"
                android:layout_toEndOf="@+id/textView5"
                android:layout_toRightOf="@+id/textView5"
                android:background="@drawable/rounded_btn_red"
                android:gravity="center"
                android:text="115.7"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_below="@+id/textView5"
                android:layout_alignStart="@+id/textView5"
                android:layout_alignLeft="@+id/textView5"
                android:layout_marginStart="0dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="8dp"
                android:text="CiÅ›nienie"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView6"
                android:layout_alignStart="@+id/textView6"
                android:layout_alignLeft="@+id/textView6"
                android:layout_marginStart="0dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="8dp"
                android:text="Glukoza"
                android:textSize="18sp" />

        </RelativeLayout>

    </FrameLayout>

</LinearLayout>